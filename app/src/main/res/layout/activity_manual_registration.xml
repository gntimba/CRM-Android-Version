<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".Register_page">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/salesDrawer"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a Customer"
                android:textSize="24sp"

                />

            <EditText
                android:id="@+id/txtCustName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"

                />

            <EditText
                android:id="@+id/txtCustSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Surname"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtCustEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtCustPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:hint="Phone number"/>

            <EditText
                android:id="@+id/txtCustCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Company"/>

            <EditText
                android:id="@+id/txtCustDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Designation"/>


            <EditText
                android:id="@+id/txtCustHomeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Home Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/txtCustCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="City"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/txtCustPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Postal Code" />

            <Spinner
                android:id="@+id/droplistProvinces"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>

            <Spinner
                android:id="@+id/droplistCountries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>


            <EditText
                android:id="@+id/txtCustComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Write a comment..."/>

            <Spinner
                android:id="@+id/droplistStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>

            <Button
                android:id="@+id/btnAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Customer" />

        </LinearLayout>

    </ScrollView>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>