<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/alertCustomer"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@color/white_greyish"
    android:minWidth="600dp"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/gradient"
        android:gravity="center"

        android:src="@mipmap/info_large"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="274dp">


        <TextView
            android:id="@+id/cust_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_surname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_name"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="Surname"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/cust_email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_name"
            android:layout_marginTop="84dp"
            android:gravity="center"
            android:text="Email"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_name"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="Phone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_company2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_name"
            android:layout_marginTop="112dp"
            android:gravity="center"
            android:text="Company"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_designation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="116dp"
            android:gravity="center"
            android:text="Designation"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_Address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="85dp"
            android:gravity="center"
            android:text="Address"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_city2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="57dp"
            android:gravity="center"
            android:text="City"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_province2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="27dp"
            android:gravity="center"
            android:text="Province"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/cust_comment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cust_name"
            android:gravity="center"
            android:text="Comment"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>


</LinearLayout>